@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="text-light" style="min-height: 100vh; background: linear-gradient(to right, #1c1c1c, #2c2c2c);">

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-light shadow">
                    <div class="card-body p-4">
                        <h2 class="card-title text-center mb-4">Log in</h2>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control bg-dark text-light border-light"
                                       autocomplete="username" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="text-light">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control bg-dark text-light border-light"
                                       autocomplete="current-password" placeholder="Password" />
                                <label asp-for="Input.Password" class="text-light">Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="Input.RememberMe" class="form-check-input" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-outline-light w-100 mb-3">Log in</button>

                            <div class="text-center">
                                <a class="d-block text-light small mb-1" asp-page="./ForgotPassword">Forgot your password?</a>
                                <a class="d-block text-light small mb-1" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                <a class="d-block text-light small" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
