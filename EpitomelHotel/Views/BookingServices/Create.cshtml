@model EpitomelHotel.Models.BookingService

@{
    ViewData["Title"] = "Create";
}

<h1>Book Your Service</h1>

<h4>BookingService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="ServiceCost" type="hidden" />


            <div class="form-group">
                <label class="control-label">Room Number</label>
                <select asp-for="RoomID" class="form-control" asp-items="@(ViewData["RoomID"] as SelectList)">
                    <option value="">-- Select Room --</option>
                </select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServiceID" class="control-label"></label>
                <select asp-for="ServiceID" class="form-control" asp-items="@(ViewData["ServiceID"] as SelectList)">
                    <option value="">-- Select Service --</option>
                </select>
                <span asp-validation-for="ServiceID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewBag.HasServices == true)
    {
        <a asp-action="Index">Back to List</a>
    }
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
