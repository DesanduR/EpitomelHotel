@model EpitomelHotel.Models.BookingService

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BookingService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingServiceID" />
            <div class="form-group">
                <input asp-for="ServiceCost" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="RoomID" class="control-label">Room Number</label>
                <select asp-for="RoomID" class="form-control" asp-items="@(ViewData["RoomID"] as SelectList)"></select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceID" class="control-label"></label>
                <select asp-for="ServiceID" class="form-control" asp-items="ViewBag.ServiceID"></select>
                <span asp-validation-for="ServiceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
