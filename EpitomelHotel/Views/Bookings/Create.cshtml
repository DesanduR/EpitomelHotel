@using System.Text.Json
@model EpitomelHotel.Models.Bookings

@{
    ViewData["Title"] = "Create";
    DateTime min = DateTime.Now;
}

<h1>Create Booking</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Check-In -->
            <div class="form-group">
                <label asp-for="CheckIn" class="control-label"></label>
                <input asp-for="CheckIn"
                       class="form-control"
                       type="date"
                       id="checkin-date"
                       min="@min.ToString("yyyy-MM-dd")"
                       value="@(Model.CheckIn != default(DateTime) ? Model.CheckIn.ToString("yyyy-MM-dd") : "")" />
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>

            <!-- Check-Out -->
            <div class="form-group">
                <label asp-for="CheckOut" class="control-label"></label>
                <input asp-for="CheckOut"
                       class="form-control"
                       type="date"
                       id="checkout-date"
                       min="@min.ToString("yyyy-MM-dd")"
                       value="@(Model.CheckOut != default(DateTime) ? Model.CheckOut.ToString("yyyy-MM-dd") : "")" />
                <span asp-validation-for="CheckOut" class="text-danger"></span>
            </div>

            <!-- Room Dropdown -->
            <div class="form-group">
                <label asp-for="RoomID" class="control-label">Room Type</label>
                <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                <span asp-validation-for="RoomID" class="text-danger"></span>
            </div>

            <!-- Admin Fields -->
            @if (User.IsInRole("Admin"))
            {
                <div class="form-group">
                    <label asp-for="PaymentStatus" class="control-label"></label>
                    <input asp-for="PaymentStatus" class="form-control" />
                    <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ApplUserID" class="control-label">User</label>
                    <select asp-for="ApplUserID" class="form-control" asp-items="ViewBag.ApplUserID"></select>
                    <span asp-validation-for="ApplUserID" class="text-danger"></span>
                </div>
            }

            <!-- Hidden Total -->
            <input asp-for="TotalAmount" type="hidden" />

            <!-- Buttons container -->
            <div class="form-group mt-3 d-flex align-items-center gap-2">
                <input type="submit" value="Create" class="btn btn-primary" />

                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-secondary" asp-action="Index">Back to Full List</a>
                }
            </div>

        </form>
    </div>
</div>



@section Scripts {
    <script>
        const unavailableDates = @Html.Raw(Json.Serialize(ViewBag.UnavailableDates ?? new List<string>()));

        const checkOutPicker = flatpickr("#checkout-date", {
            minDate: "today",
            disable: unavailableDates,
            dateFormat: "Y-m-d"
        });

        flatpickr("#checkin-date", {
            minDate: "today",
            disable: unavailableDates,
            dateFormat: "Y-m-d",
            onChange: function (selectedDates, dateStr, instance) {
                if (selectedDates.length > 0) {
                    const nextDay = new Date(selectedDates[0]);
                    nextDay.setDate(nextDay.getDate() + 1);
                    checkOutPicker.set("minDate", nextDay);

                    const currentCheckOut = checkOutPicker.selectedDates[0];
                    if (!currentCheckOut || currentCheckOut < nextDay) {
                        checkOutPicker.setDate(nextDay, true);
                    }
                }
            }
        });
    </script>
}




    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const checkInInput = document.getElementById("checkin-date");
            const checkOutInput = document.getElementById("checkout-date");
            const checkOutError = document.getElementById("checkout-error");

            function validateDates() {
                const checkIn = new Date(checkInInput.value);
                const checkOut = new Date(checkOutInput.value);

                if (checkInInput.value && checkOutInput.value) {
                    if (checkOut <= checkIn) {
                        checkOutInput.setCustomValidity("Check-out must be after check-in.");
                        checkOutError.innerText = "Check-out must be after check-in.";
                    } else {
                        checkOutInput.setCustomValidity("");
                        checkOutError.innerText = "";
                    }
                }
            }

            checkInInput.addEventListener("change", function () {
                if (checkInInput.value) {
                    const minDate = new Date(checkInInput.value);
                    minDate.setDate(minDate.getDate() + 1);
                    checkOutInput.min = minDate.toISOString().split("T")[0];
                }
                validateDates();
            });

            checkOutInput.addEventListener("change", validateDates);
        });
    </script>

