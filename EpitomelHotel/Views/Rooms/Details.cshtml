@model EpitomelHotel.Models.Rooms

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Room Details</h1>

<div>
    <h4>Room Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RoomType)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RoomType)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Price)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Capacity)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Capacity)</dd>

        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Status.StatusName)</dd>
        }
    </dl>
</div>

<div class="mt-4">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.RoomID" class="btn btn-primary me-2">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
