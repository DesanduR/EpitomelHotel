@model IEnumerable<EpitomelHotel.Models.Services>

@{
    ViewData["Title"] = "Services";
}

<h1 class="text-light mb-4">Services</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a class="btn btn-success mb-3" asp-controller="BookingServices" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </p>
}

<table class="table table-dark table-striped table-hover align-middle">
    <thead>
        <tr>
            <th scope="col" class="text-info">
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th scope="col" class="text-info" style="width: 220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span class="text-white fw-semibold">@Html.DisplayFor(modelItem => item.ServiceName)</span>
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-warning btn-sm me-2" asp-action="Edit" asp-route-id="@item.ServiceID">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-outline-info btn-sm me-2" asp-action="Details" asp-route-id="@item.ServiceID">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.ServiceID">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.ServiceID">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
