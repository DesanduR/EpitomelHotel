<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EpitomelHotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EpitomelHotel.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet" />
</head>
<body class="bg-dark {
    background-image: linear-gradient(to right, #2c3e50, #4ca1af); 
} text-light">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand hotel-link" asp-area="" asp-controller="Home" asp-action="Index">Epitomel Hotel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>

                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Staffs" asp-action="Index">Staffs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Rooms" asp-action="Index">Rooms</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="BookingServices" asp-action="Index">BookingServices</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Payments" asp-action="Index">Payments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Status" asp-action="Index">Status</a>
                        </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Bookings" asp-action="RedirectToMyBookings">Bookings</a>
                        </li>
                    </ul>
                </div>
                <partial name ="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-dark text-light py-4 mt-auto">
        <div class="container">
            <div class="row">
                <!-- About -->
                <div class="col-md-4 mb-3">
                    <h5>Epitomel Hotel</h5>
                    <p class="small">Experience luxury and comfort in the heart of the city. Your perfect stay awaits.</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">Home</a></li>
                        <li><a asp-area="" asp-controller="Rooms" asp-action="Index" class="text-light text-decoration-none">Rooms</a></li>
                        <li><a asp-area="" asp-controller="Services" asp-action="Index" class="text-light text-decoration-none">Services</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-md-4 mb-3">
                    <h5>Contact Us</h5>
                    <address class="small">
                        123 Luxury St.<br>
                        Cityville, CV 45678<br>
                        Phone: (123) 456-7890<br>
                        Email: <a href="mailto:info@epitomelhotel.com" class="text-light text-decoration-none">info@epitomelhotel.com</a>
                    </address>
                    <div>
                        <a href="https://www.facebook.com/login.php" target="_blank" rel="noopener" class="text-light me-3">
                            <i class="bi bi-facebook"></i> Facebook
                        </a>
                        <a href="https://twitter.com/login" target="_blank" rel="noopener" class="text-light me-3">
                            <i class="bi bi-twitter"></i> Twitter
                        </a>
                        <a href="https://www.instagram.com/accounts/login/" target="_blank" rel="noopener" class="text-light">
                            <i class="bi bi-instagram"></i> Instagram
                        </a>
                    </div>
                </div>
            </div>

            <hr class="bg-secondary" />

            <div class="text-center small">
                &copy; 2025 EpitomelHotel. All rights reserved.
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script> <!-- ✅ ADDED -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
